{{>layout/header}}

<h1><a href="/" >상담 기록 게시판</a></h1>
<div class="col-md-12">
    <div class="row">
        <div class="col-md-6">
            <a href="/posts/save" role="button" class="btn btn-primary">글 등록</a>
            {{#userName}}
                Logged in as: <span id="user">{{userName}}</span>
                <a href="/logout" class="btn btn-info active" role="button">Logout</a>
            {{/userName}}
        </div>
    </div>
    <br>
    <!-- 목록 출력 영역 -->
    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>게시글번호</th>
            <th>상담자(작성자)</th>
            <th>내담자</th>
            <th>상담일자</th>
            <th>이미지들</th>
            <th>최종수정일</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#posts}}
            <tr>
                <td><a href="/posts/view/{{id}}">{{id}}</a></td>
                <td>{{author}}</td>
                <td>{{client}}</td>
                <td>{{title}}</td>
                <td>{{images}}</td>
                <td>{{modifiedDate}}</td>
                <td><input type="button" value="수정" onClick="location.href='/posts/update/{{id}}'"/></td>
            </tr>
        {{/posts}}
        </tbody>
    </table>
</div>

{{>layout/footer}}