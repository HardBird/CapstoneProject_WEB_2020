{{>layout/header}}

<h1>상담자 정보 수정</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="title">번</label>
                <input type="text" class="form-control" id="id" value="{{counselor.id}}" readonly>
            </div>
            <div class="form-group">
                <label for="name">이름</label>
                <input type="text" class="form-control" id="name" value="{{counselor.name}}">
            </div>
            <div class="form-group">
                <label for="age"> 나이 </label>
                <input type="text" class="form-control" id="age" value="{{counselor.age}}">
            </div>
            <div class="form-group">
                <label for="job"> 직업 </label>
                <input type="text" class="form-control" id="job" value="{{counselor.job}}">
            </div>
        </form>
        <a href="/counselor/index" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="counselor-btn-update">수정 완료</button>
        <button type="button" class="btn btn-danger" id="counselor-btn-delete">삭제</button>
    </div>
</div>

{{>layout/footer}}